.row.main-content
  %h1 Venues List
  = link_to 'Create an Event', new_venue_path
  .clearfix
  .small-12.large-7.columns.event-list-wrapper
    - @venues.each do |venue|
      .event-wrapper.row
        .event-details.small-10.columns
          .event-title
            %h4
              = venue.name
                .description
            %p
              = venue.description
                .description
            %p
              = venue.capacity
                .description
            %p
              = venue.street_address_1
                .description
            %p
              = venue.street_address_2
                .description
            %p
              = venue.city
                .description
            %p
              = venue.state
                .description
            %p
              = venue.zip
                .description
            %p
              = venue.uri
                .description
            %p
              = venue.contact_name
                .description
            %p
              = venue.contact_email
                .description
            %p
              = venue.contact_phone
                .description

        .event-actions.small-2.columns
          .edit
            = link_to 'Edit', edit_venue_path(venue), class: "button small secondary expand"