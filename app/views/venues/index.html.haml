.row.main-content
  %h1 Venues List
  = link_to 'Create an Event', new_venue_path
  .clearfix
  .small-12.large-7.columns.event-list-wrapper
    - @venues.each do |venue|
      .event-wrapper.row
        .event-details.small-10.columns
          .event-title
            %h4.description
              = venue.name
            %p.description
              = venue.description
            %p.description
              = venue.capacity  
            %p.description
              = venue.street_address_1
            %p.description
              = venue.street_address_2
            %p.description
              = venue.city
            %p.description
              = venue.state
            %p.description
              = venue.zip 
            %p.description
              = venue.uri
            %p.description
              = venue.contact_name
            %p.description
              = venue.contact_email 
            %p.description
              = venue.contact_phone

        .event-actions.small-2.columns
          .edit
            = link_to 'Edit', edit_venue_path(venue), class: "button small secondary expand"