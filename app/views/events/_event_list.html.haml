.event-wrapper.col-md-4
  .an-event
    .event-info
      .title
        %h3
          = link_to event.title, event
      - if event.start_time
        .time
          = event.display_time
      .location
        - if event.address_line_1.present?
          = event.address_line_1
      - if event.description.present?
        .description
          =simple_format h event.description.html_safe
          .read-more
            =link_to "READ MORE", event
      .price
        - if event.price == 0 || event.price == nil
          No charge
        - else
          = "$" + event.price.to_s
