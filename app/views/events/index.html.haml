.row.main-content
  %ul
    - @events.each do |event|  
      %li
        = link_to event.title, event
        - if current_user.registered?(event)
          Attending
          = link_to 'Cancel', cancel_registration_event_path(event), method: :delete
        - else
          = link_to 'Attend', event_registrations_path(event), method: :post
