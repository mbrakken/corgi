.row.main-content
  .small-12.columns
    .row.top-event-content
      .small-12.large-7.columns
        .row.event-title
          %h1
            = @event.title
        .row.event-actions
          - if current_user && current_user.registered?(@event)
            .small-3.columns
              .attending.button.success.small.expand
                Attending
            .small-3.columns
              = link_to 'Cancel', cancel_registration_event_path(@event), method: :delete, :class => "button small secondary expand cancel"
            .small-3.columns.left
              = link_to 'Edit', edit_event_path(@event), :class => "button small expand secondary"
          - else
            .row.attending
              .small-4.columns
                = link_to 'Attend', registrations_path(event_id: @event.id), method: :post, :class => "button small expand right"
        .row
          .event-description
            %p
              =simple_format h @event.description.html_safe
        .row.event-url
          %p
            = @event.url

      - if @event.organization
        .event-organization
          %p
      .event-details.small-12.large-4.columns
        .event-price
          - if @event.price == 0
            %p No charge
          - else
            %p
              = "$" + @event.price.to_s
        .event-time
          %p
            = @event.start_time.strftime("%a %b #{@event.start_time.day.ordinalize}")
            %br
            - if @event.end_time.present?
              = @event.start_time.strftime("%l:%M %p")+ " to " + @event.end_time.strftime("%l:%M %p")
            - else
              = @event.start_time.strftime("%l:%M %p")
        .event-location
          =image_tag "madison-map.gif"
          %p
            - if @event.address
              = @event.address
            - else
              = @event.address_line_1
              - if @event.address_line_2 != ""
                %br
                = @event.address_line_2
              %br
              = @event.city + ', ' + @event.state + ' ' + @event.zip_code
        .hosts
          %h3 Hosts
          %ul
            - @event.hosts.each do |user|
              %li= user.name
        .attendees
          %h3 Attendees
          %ul
            - @event.attendees.each do |user|
              %li= user.name
          .csv
            = link_to 'Attendee CSV', registrations_path(event_id: @event.id, format: :csv), :class => "button secondary"

