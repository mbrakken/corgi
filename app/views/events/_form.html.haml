= form_for @event do |f|
  .field.title
    = f.label :title
    = f.text_field :title
  .field.description
    = f.label :description
    = f.text_area :description
  .field.website
    = f.label :website
    = f.text_field :uri
  .fields.location
    = f.label :address_line_1
    = f.text_field :address_line_1
    = f.label :address_line_2
    = f.text_field :address_line_2
    = f.label :city
    = f.text_field :city
    = f.label :state
    = f.text_field :state
    = f.label :zip_code
    = f.text_field :zip_code
  .fields.date-time
    = f.label :start_time
    = f.datetime_select :start_time, ampm: true
    = f.label :end_time
    = f.datetime_select :end_time, ampm: true
  .field.attendance-limit
    = f.label :num_of_seats, "Attendance limit"
    = f.number_field :num_of_seats

  .actions
    = f.submit 'Save', :class => "button"

/ t.string   "title"
/ t.text     "description"
/ t.datetime "start_time"
/ t.datetime "end_time"
/ t.boolean  "all_day"
/ t.integer  "venue_id"
/ t.datetime "corgi_create_date"
/ t.string   "uri"
/ t.integer  "num_of_seats"
/ t.datetime "created_at"
/ t.datetime "updated_at"
/ t.integer  "price",             default: 0
/ t.string   "address_line_1"
/ t.string   "address_line_2"
/ t.string   "city"
/ t.string   "state"
/ t.string   "zip_code"
