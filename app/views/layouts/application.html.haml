/[if lt IE 7 ] <html class="ie6" lang="en">
/[if IE 7 ] <html class="ie7" lang="en">
/[if IE 8 ] <html class="ie8" lang="en">
/ [if (gte IE 9)|!(IE)]><!
%html{lang: "en"}
  / <![endif]
  %head
    %meta{charset: "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "MADi: discover Madison innovation"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
  %body{ class: "#{controller_name} #{action_name}" }
    = render 'shared/nav'
    .row
      .12-small.6-large.columns
        .alert-box
          = render 'layouts/flashes'
    #main-content
      .columns
        .row.main-content
          = yield
    .clearfix
    .footer-wrapper.columns
      .footer.row
        - if (params[:controller] == 'home')
          .photo-credit
            Photo credit:
            = link_to "Richard Hurd", "http://www.flickr.com/photos/rahimageworks/"
        = link_to image_tag("cc-sa.png", title: "CC license", class: "center"), "http://creativecommons.org/licenses/by/3.0/"
        = link_to image_tag("mom-small.png", title: "Made of Madison", class: "right"), "http://www.madeofmadison.com"
