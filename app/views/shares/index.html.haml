.row.main-content
  .small-12.large-12.columns.bold
    %h1 Listing shares

    .go-left
      Message
      - @shares.each do |share|
      
        .go-left
          = share.message
        .go-left
          = share.event.title
        .go-left
          = link_to 'Show', share
        .go-left
          = link_to 'Edit', edit_share_path(share)
        .go-left
          = link_to 'Destroy', share, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

    = link_to 'New Share', new_share_path
