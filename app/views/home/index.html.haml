.small-12.large-7.columns
  .header{ :height => "56px"}
    = image_tag "madi-logo.png", title: "MADi logo", :height => "56px", :width => "146px"
  .left-content
    // - if !current_user
    %h2.subheader
      Discover Madison Innovation
    %p
      Connect. Find the tread. Get involved. Involve yourself. Dig in. Get tied in. Red thread. Discover Madison. Find the thread. Follow the thread. Madison business connections. Join Madison's innovation network
.small-12.large-4.columns
  - if current_user && current_user.twitter_identity
    .identity.twitter
      .image
        = link_to image_tag(current_user.twitter_identity.info['image']), 'http://www.twitter.com/' + current_user.twitter_identity.info['nickname']
      .names
        .name
          = link_to current_user.twitter_identity.info['name'], 'http://www.twitter.com/' + current_user.twitter_identity.info['nickname']
        .nickname
          = "@" + current_user.twitter_identity.info['nickname']
      = link_to "", identity_path(current_user.twitter_identity), method: 'delete', class: 'disconnect'
      .icon
        = image_tag "smi_twitter-logo.png", title: "Twitter"
      .clearfix
  - else
    = link_to "Connect with Twitter", twitter_auth_path, :class => "button twitter expand large social-media"
  %br
  - if current_user && current_user.linkedin_identity
    .identity.linkedin
      .image
        = link_to image_tag(current_user.linkedin_identity.info['image']), 'http://www.linkedin.com/profile/view?id=' + current_user.linkedin_identity.uid
      .names
        .name
          = link_to current_user.linkedin_identity.info['name'], 'http://www.linkedin.com/profile/view?id=' + current_user.linkedin_identity.uid
      = link_to "", identity_path(current_user.linkedin_identity), method: 'delete', class: 'disconnect'
      .icon
        = image_tag "smi_linkedin-logo.png", title: "LinkedIn"
      .clearfix
  - else
    = link_to "Connect with LinkedIn", linkedin_auth_path, :class => "button linkedin expand large social-media"
  %br
  - if current_user && current_user.facebook_identity
    .identity.facebook
      .image
        = link_to image_tag(current_user.facebook_identity.info['image']), 'http://www.facebook.com/profile.php?id=' + current_user.facebook_identity.uid
      .names
        .name
          = link_to current_user.facebook_identity.info['name'], 'http://www.facebook.com/profile.php?id=' + current_user.facebook_identity.uid
      = link_to "", identity_path(current_user.facebook_identity), method: 'delete', class: 'disconnect'
      .icon
        = image_tag "smi_fb-logo.png", title: "Facebook"
      .clearfix
  - else
    = link_to "Connect with Facebook", facebook_auth_path, :class => "button facebook expand large social-media"
  %br
  - if current_user && current_user.googleplus_identity
    .identity.googleplus
      .image
        = link_to image_tag(current_user.googleplus_identity.info['image']), 'http://plus.google.com/' + current_user.googleplus_identity.uid
      .names
        .name
          = link_to current_user.googleplus_identity.info['name'], 'http://plus.google.com/' + current_user.googleplus_identity.uid
      = link_to "", identity_path(current_user.googleplus_identity), method: 'delete', class: 'disconnect'
      .icon
        = image_tag "smi_gplus-logo.png", title: "Google"
      .clearfix
  - else
    = link_to "Connect with Google", googleplus_auth_path, :class => "button googleplus expand large social-media"
  %br
  - if current_user

    = form_for current_user do |f|
      = f.label :email
      = f.text_field :email
      = f.label :mobile_num, "Mobile Number"
      = f.text_field :mobile_num
      %ul
        - current_user.identities.each do |identity|
          %li
            = f.label :avatar, value: "#{identity.info['image']}" do
              = image_tag "#{identity.info['image']}"
            = f.radio_button :avatar, "#{identity.info['image']}"
      = f.submit 'Save Info'
