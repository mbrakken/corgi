  %br
  - if current_user

    = form_for current_user do |f|
      = f.text_field :email
      %ul
        - current_user.identities.each do |identity|
          %li
            = f.label :avatar, value: "#{identity.info['image']}" do
              = image_tag "#{identity.info['image']}"
            = f.radio_button :avatar, "#{identity.info['image']}"
        %li
          = f.label :avatar, value: "http://www.gravatar.com/avatar/#{gravatar(current_user.email)}" do
            = image_tag "http://www.gravatar.com/avatar/#{@hash}"
          = f.radio_button :avatar, "http://www.gravatar.com/avatar/#{gravatar(current_user.email)}"
      = f.submit 'Save Info'

    %p 
      Choose a default image to use on MADi, or set your own with
      = link_to "Gravatar.com", "http://www.gravatar.com"
